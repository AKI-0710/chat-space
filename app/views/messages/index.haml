.wrapper
  .chat-side
    .side-header
      %p.user-name
        user_name
      %ul.user-menu
        %li
          = link_to '#' do
            %i.user-menu__edit-icon.fa.fa-edit
        %li
          = link_to '#' do
            %i.user-menu__cog-icon.fa.fa-cog
    .groups
      %ul
        %li
          = link_to '#' do
            .group
              %p.group__name group-name
              %p.group__latest-message message is here!
        %li
          = link_to '#' do
            .group
              %p.group__name group2-name
              %p.group__latest-message hello

  .chat-main
    .main-header 
      .current-group
        %h2.current-group__name group-name 
        %ul.member-list
          Member:
          %li.member-list__member member1
          %li.member-list__member member2
      = link_to '#', class: "group-edit-btn" do
        .gtoup-edit-btn__div Edit
    .messages
      .message
        .message-meta-data
          %p.message-meta-data__name name
          %p.message-meta-data__date date
        .message-text
          %p message
      .message
        .message-meta-data
          %p.message-meta-data__name name
          %p.message-meta-data__date date
        .message-text
          %p message

    .form
      %form#new-message.new-message
        .input-box  
          %input#message-content.input-box__text{type: "text", placeholder: "type a message"}
          %label.image-label
            %i.image-label__file-icon.fa.fa-image
            %input#message_image.image-label__input{type: "file"}
        %input.new-message__submit-btn{type: "submit", value: "Send"}
